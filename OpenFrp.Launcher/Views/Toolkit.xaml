            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Height="250">
                <Grid x:Name="grid">
                    <Image Source="..\Resourecs\wallhaven-m9o2vk_1920x1080.png" Stretch="UniformToFill" />
                    <TextBlock
                        Margin="40,36,40,0"
                        HorizontalAlignment="Left"
                        FontWeight="Bold"
                        Style="{StaticResource TitleTextBlockStyle}"
                        Text="这里什么都没有,等大家吧。" />
                </Grid>
                <Grid VerticalAlignment="Bottom" Margin="40,0,40,36">
                    <Rectangle HorizontalAlignment="Left" Width="200" Height="75" Fill="{fw:AcrylicBrush grid}">
                        
                    </Rectangle>
                    <TextBlock Text="我们不见不散" VerticalAlignment="Center" Margin="24,0,0,0"/>
